<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-6 col-md-push-6">
    <p>
      <%= image_tag @artwork.image.url(:medium), class: 'img-frame img-reponsive img-thumbnail' %>
    </p>
    <div class="pull-left">
      <p class="artwork-lead">
        <%= @artwork.title %>
      </p>

      <p>
        <%= @artwork.media %>
      </p>
    </div>
    <div class="pull-right">
      <p class="artwork-lead">
        <%= number_to_currency(@artwork.price) %>
      </p>
      <p>
        <% if signed_in? && current_artist == @artwork.artist %>
          <small><%= link_to 'Edit', edit_artwork_path(@artwork) %></small>
        <% end %>
      </p>
    </div>
  </div>

  <div class="col-md-6 col-md-pull-6">
    <%= render 'artist_profile' %>
  </div>
</div>
